# Database (Railway PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Redis (Railway Redis)
REDIS_URL="redis://default:password@host:6379"

# NextAuth
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# HappyRobot Integration
# =============================================================================

# Webhook URL for CANCELLATION workflow
HAPPYROBOT_WEBHOOK_CANCEL_URL="https://hooks.happyrobot.ai/webhook/xxxxx"

# Webhook URL for RESCHEDULE workflow (expedite/push-out)
HAPPYROBOT_WEBHOOK_RESCHEDULE_URL="https://hooks.happyrobot.ai/webhook/yyyyy"

# API key for querying run status (Platform API)
HAPPYROBOT_API_KEY="hr_api_xxxxxxxxxxxxx"

# Organization ID
HAPPYROBOT_ORG_ID="org_xxxxxxxxxxxxx"

# Secret for webhook signature verification (optional)
HAPPYROBOT_WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# Cron Jobs Configuration
# =============================================================================

# Secret for authenticating cron endpoint calls
CRON_SECRET="your-cron-secret-here"

# =============================================================================
# App Configuration
# =============================================================================

# Public URL of the app (used for callback URLs)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_URL="http://localhost:3000"

# =============================================================================
# Queue Configuration
# =============================================================================

QUEUE_POLL_INTERVAL_MS="5000"
MAX_CONCURRENT_CALLS="5"
